{
  "name": "Sons of Peaky - Irmandade de Motociclistas",
  "short_name": "Sons of Peaky",
  "description": "Irmandade de motociclistas em São Paulo desde 2021. Conheça nossa história, participe de rolês exclusivos e junte-se à nossa família.",
  "version": "1.0.0",
  "manifest_version": 2,
  
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  
  "theme_color": "#c9a14a",
  "background_color": "#0d0d0d",
  
  "icons": [
    {
      "src": "assets/icons/favicon-16x16.png",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "assets/icons/favicon-32x32.png",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "assets/icons/apple-touch-icon.png",
      "sizes": "180x180",
      "type": "image/png"
    },
    {
      "src": "assets/icons/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "assets/icons/android-chrome-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "categories": [
    "lifestyle",
    "social",
    "entertainment"
  ],
  
  "lang": "pt-BR",
  
  "screenshots": [
    {
      "src": "assets/img/screenshot-mobile.webp",
      "sizes": "390x844",
      "type": "image/webp",
      "form_factor": "narrow",
      "label": "Sons of Peaky no mobile"
    },
    {
      "src": "assets/img/screenshot-desktop.webp",
      "sizes": "1280x720",
      "type": "image/webp",
      "form_factor": "wide",
      "label": "Sons of Peaky no desktop"
    }
  ],
  
  "shortcuts": [
    {
      "name": "IA Assistant",
      "short_name": "IA",
      "description": "Converse com nosso assistente IA",
      "url": "/?ai=open",
      "icons": [
        {
          "src": "assets/icons/shortcut-ai.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Gerar Rolê",
      "short_name": "Rolê",
      "description": "Gere rolês personalizados",
      "url": "/?action=role",
      "icons": [
        {
          "src": "assets/icons/shortcut-role.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Agenda",
      "short_name": "Eventos",
      "description": "Veja próximos eventos",
      "url": "/#agenda",
      "icons": [
        {
          "src": "assets/icons/shortcut-agenda.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Contato",
      "short_name": "Contato",
      "description": "Entre em contato conosco",
      "url": "/#contato",
      "icons": [
        {
          "src": "assets/icons/shortcut-contact.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "web",
      "url": "https://erikcostas1-source.github.io/sonsofpeaky-site/"
    }
  ],
  
  "prefer_related_applications": false,
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+sop",
      "url": "/?action=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "text/plain": [".txt"],
        "application/json": [".json"]
      }
    }
  ]
}